<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hussnain.sunshine.Main2Activity">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/first"
     >
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Loction"
    android:textSize="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/location"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="London,UK"
        android:textSize="20dp"
        android:layout_below="@+id/location"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
         android:id="@+id/country"
        />
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#9E9E9E">

     </View>
 </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="temperature Units"
           android:id="@+id/temprature"
           android:textSize="30dp"
           android:layout_marginLeft="10dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Metrics"
           android:textSize="20dp"
           android:layout_below="@+id/temprature"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="5dp"
           android:id="@+id/units"
           />
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#9E9E9E">

       </View>
   </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/notification"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable"
            android:textSize="20dp"
            android:layout_below="@+id/notification"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/enable"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notification"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E">

        </View>
    </RelativeLayout>

</LinearLayout>
